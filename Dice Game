import random
while True:
    print("1. Roll the dice\n2. Exit")
    user = input("What would you like to do? ")
    
    if user == '1':
        number = random.randint(1, 6)
        print(number)
    elif user == '2':
        break
    else:
        print("Invalid input. Please choose 1 to roll the dice or 2 to exit.")
